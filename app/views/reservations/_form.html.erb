<div class="card">
  <div class="card-header">
    <span><i class="fa fa-bolt" style="color:#ffb400"></i> $<%= @room.price %></span>
    <span class="pull-right">Per Night</span>
  </div>
  <div class="card-body">
    <%= form_for([@room, @room.reservations.new]) do |f| %>
    <div class="row">
      <div class="col-md-6">
      <label>Check In</label>
        <%= f.text_field :start_date, readonly:true, placeholder: "Start Date", class: "form-control datepicker" %>
      </div>
      <div class="col-md-6">
        <label>Check Out</label>
        <%= f.text_field :end_date, readonly:true, disabled:true, placeholder: "End Date", class: "form-control datepicker" %>
      </div>
    </div>

    <p class="text-center message-alert"><span id="message"></span></p>
    <div id="preview" style="display: none;">
      <table class="reservation-table">
        <tbody>
          <tr>
            <td>Price</td>
            <td class="text-right">$<%= @room.price %></td>
          </tr>
          <tr>
            <td>Night(s)</td>
            <td class="text-right">x <span id="reservation_nights"></span></td>
          </tr>
          <tr>
            <td class="total">Total</td>
            <td class="text-right">$ <span id="reservation_total"></td>
          </tr>
        </tbody>
      </table>
    </div>
    
    <br>
    <%= f.submit "Book Now", id: "btn_book", class: "btn btn-primary btn-block", disabled:true %>
    <% end %>
  </div>
</div>

<script type="text/javascript">

  function checkDate(date) {
    dmy = date.getDate() + "-" + (date.getMonth()  + 1) + "-" + date.getFullYear();
    // console.log(dmy);
    // console.log(date);
    // console.log([$.inArray(dmy, unavailbleDates) == -1 ]);
    return [$.inArray(dmy, unavailbleDates) == -1 ]
  }

  $(function(){

    unavailbleDates = [];

    $.ajax({
      url: '<%= preload_room_path(@room) %>',
      dataType: 'json',
      success: function(data) {
        $.each(data, function(arrID, arrValue){
          
            console.log(arrValue);
            for(var d = new Date(arrValue.start_date); d <= new Date(arrValue.end_date); d.setDate(d.getDate() + 1)){
              unavailbleDates.push($.datepicker.formatDate('d-m-yy', d))
            }
        });

        $('#reservation_start_date').datepicker({
          dateFormat: 'dd-mm-yy',
          minDate: 0,
          maxDate: '2m',
          beforeShowDay: checkDate,
          onSelect: function(selected){
            $('#reservation_end_date').attr("disabled", false);
            $('#reservation_end_date').datepicker("option", "minDate", selected);
            var start_date = $('#reservation_start_date').datepicker('getDate');
            var end_date = $('#reservation_end_date').datepicker('getDate');
            var nights = (end_date-start_date)/1000/60/60/24;
            var total = nights * <%= @room.price %>;
            var input = {
              'start_date': start_date,
              'end_date': end_date
            };

            $.ajax({
              url: '<%= preview_room_path(@room) %>',
              data: input,
              success: function(data){
                if(data.conflict  || nights<1) {
                  $('#message').text("These days are not available");
                  $('#preview').hide();
                  $('#btn_book').attr('disabled', true)
                }else{
                  $('#message').text("");
                  $('#preview').show();
                  $('#btn_book').attr('disabled', false);
                  
                  $('#reservation_nights').text(nights);
                  $('#reservation_total').text(total);
                }
              }
            }) //ajax
          } //onselect
        });
        $('#reservation_end_date').datepicker({
          dateFormat: 'dd-mm-yy',
          minDate: 0,
          maxDate: '2m',
          beforeShowDay: checkDate,
          onSelect: function(selected){
            $('#reservation_start_date').datepicker("option", "maxDate", selected);
            var start_date = $('#reservation_start_date').datepicker('getDate');
            var end_date = $('#reservation_end_date').datepicker('getDate');
            var nights = (end_date-start_date)/1000/60/60/24;
            var total = nights * <%= @room.price %>;
            var input = {
              'start_date': start_date,
              'end_date': end_date
            };

            $.ajax({
              url: '<%= preview_room_path(@room) %>',
              data: input,
              success: function(data){
                if(data.conflict || nights<1) {
                  $('#message').text("These days are not available");
                  $('#preview').hide();
                  $('#btn_book').attr('disabled', true)
                }else{
                  $('#message').text("");
                  $('#preview').show();
                  $('#btn_book').attr('disabled', false);
                  
                  $('#reservation_nights').text(nights);
                  $('#reservation_total').text(total);
                }
              },
              error: function(XMLHttpRequest, textStatus, errorThrown) {
                alert(textStatus);
              }
            })

          }
        })

      },
      error: function(XMLHttpRequest, textStatus, errorThrown) {
        // alert(XMLHttpRequest.status);
        // alert(XMLHttpRequest.readyState);
        // alert(textStatus);
      }
    });
    
  })
</script>